@model LivrariaComeia.Models.ViewModels.LivroViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Livro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Livro.Nome" class="control-label"></label>
                <input asp-for="Livro.Nome" class="form-control" />
                <span asp-validation-for="Livro.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Livro.Descricao" class="control-label"></label>
                <input asp-for="Livro.Descricao" class="form-control" />
                <span asp-validation-for="Livro.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Livro.DataDeLancamento" class="control-label"></label>
                <input asp-for="Livro.DataDeLancamento" class="form-control" />
                <span asp-validation-for="Livro.DataDeLancamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Livro.Valor" class="control-label"></label>
                <input asp-for="Livro.Valor" class="form-control" />
                <span asp-validation-for="Livro.Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Livro.Categoria" class="control-label"></label>
                @Html.DropDownList("CategoriaId", Model.CatetoriasSelect, new { @class = "form-control" })
                <span asp-validation-for="Livro.Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
